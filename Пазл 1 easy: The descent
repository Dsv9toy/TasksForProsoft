// Пазл 1: The descent. Корабль, уничтожающий горы.
#include <iostream>
#include <string>
#include <vector>
#include <algorithm>

using namespace std;
/*
Алгоритм, позволяющий проходить горы и вычислять на каждом проходе максимульную высоту горы
При нахождении максимальной высоты, наш корабль стреляет в самую высокую гору, тем самым уменьшая ее размер
Корабль будет пролетать над горами, до тех пор пока не останется ни одной горы
*/
int main()
{
    while (1) {
        int max_height = 0; // Используется для отслеживания максимальной высоты горы в одном пролете корабля
        int target_index = 0; // В нем будет находится индекс горы с максимальной высотой
        /*
        В цикле сравниваются высоты восьми гор. Каждая считанная высота сравнивается с текущим максимумом
        Если находится более высокая гора, чем записана в target_index, то переменная обновляется
        */
        for (int i = 0; i < 8; i++) {
            int mountain_h;
            cin >> mountain_h; cin.ignore();
            
            if (mountain_h > max_height) {
                max_height = mountain_h;
                target_index = i;
            }
        }

        cout << target_index << endl;
    }
}
